{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://proskomma.bible/pk-tree.schema.json",
  "title": "Proskomma Tree",
  "description": "Prokomma's tree-like data format.",
  "type": "object",
  "$defs": {
    "element": {
      "type": "object",
      "required": ["content"],
      "additionalProperties": false,
      "properties": {
        "content": { "type": "object" },
        "children": {
          "type": "array",
          "default": [],
          "items": { "$ref": "#/$defs/element" }
        }
      }
    }
  },
  "properties": {
    "content": { "type": "object" },
    "children": {
      "type": "array",
      "default": [],
      "items": { "$ref": "#/$defs/element" }
    }
  },
  "required": ["content"],
  "additionalProperties": false
}
